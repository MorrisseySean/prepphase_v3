<div class = "container">
  <div class = "row">
    <div class = "col-md-8 col-md-offset-2">
      <h1>devMatch Community</h1>
      <p>Welcome to the devMatch community page!</p>
      <ul class = "list-unstyled">
        <% @users.each do |user| %>
          <% if user.profile %>
            <li>
              <div class = "row well <%= cycle('', 'white-bg') %>" %>
                <div class = "col-sm-4 text-center">
                  <% if user.profile.avatar %>
                    <%= link_to user do %>
                      <%= image_tag user.profile.avatar.url, class: 'user-index-avatar' %>
                    <% end %>
                  <% end %>
                </div>
                <div>
                  <%= link_to user do %>
                    <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                  <% end %>
                </div>
                <p>
                  <%= user.profile.job_title %>
                  <% if user.plan_id == 2 %>
                    <span class = 'label label-danger'>Pro Account</span>
                  <% end %>
                </p>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>