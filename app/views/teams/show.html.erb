<div class = "container">
    <div class = "row well">
        <div class = "col-md-3 team-sidebar">
            <%= image_tag @team.avatar %>
            <br/>
            <br/>
            <% if current_user.id == @team.user_id %>
                <div class = "well admin-well">
                    <h3>Admin Panel</h3>
                    <%= link_to "Edit Team", edit_team_path(id: @team.id), class: "btn btn-warning btn-block" %>
                    <%= link_to "Delete Team", edit_team_path(id: @team.id), class: "btn btn-danger btn-block" %>
                </div>
            <% end %>
            <p><%= @team.description %></p>
        </div>
        <div class = "col-md-6">
            <h1><%= @team.name %></h1>
            <h2>Team Members</h2>
            <div class = "row team-member-div">
                <% @team_members.each do |member| %>
                    <div class = "col-md-4 team-member-box">
                        <%= link_to user_path(id: member.user_id) do %>
                        <div class = 'row'>
                        <%= image_tag member.avatar %>
                        <h4><%= member.username %></h4>
                        
                        </div>
                        <% end %>
                        <div class = 'row'>
                        <% if member.user_id == @team.user_id %>
                            <span class = "label label-warning">Captain</span>
                        <% elsif member.user_id == current_user.id %>
                            <%= form_for @team, url: team_path( id: @team.id ), :html => { :multipart => true } do |f| %>
                                <%= f.hidden_field :button, value: "leave" %>
                                <%= submit_tag( "Leave Team", class: "btn btn-danger" ) %>
                            <% end %>
                        <% elsif current_user.id == @team.user_id %>
                            <%= form_for @team, url: team_path( id: @team.id ), :html => { :multipart => true } do |f| %>
                                <%= f.hidden_field :button, value: "kick" %>
                                <%= f.hidden_field :member, value: member.user_id %>
                                <%= submit_tag( "Kick Player", class: "btn btn-danger" ) %>
                            <% end %>
                        <% end %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>