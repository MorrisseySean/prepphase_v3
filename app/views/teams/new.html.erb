<div class = "container">
    <div class = 'row'>
        <div class = 'col-md-6 col-md-offset-3'>
            <h1 class = 'text-center'>Create your team!</h1>
            <p class = 'text-center'>Create a team to join in the PPL</p>
            <div class = 'well'>
                <%= form_for @team, url: teams_path, :html => { :multipart => true } do |f| %>
                    <%= f.hidden_field(:user_id, value: current_user.id) %>
                    <div class = 'form-group'>
                        <%= f.label :name %>
                        <%= f.text_field :name, class: 'form-control' %>
                    </div>
                    <div class = 'form-group'>
                        <%= f.label :description %>
                        <%= f.text_area :description, class: 'form-control' %>
                    </div>
                    <div class = 'form-group'>
                        <h4>Looking For</h4>
                            <%= f.label :firepower %>
                                <%= f.check_box :firepower, value: false %> &emsp;
                            <%= f.label :frontline %>
                                <%= f.check_box :frontline, value: false %> &emsp;
                            <%= f.label :support %>
                                <%= f.check_box :support, value: false %> &emsp;
                            <%= f.label "Generalist" %>
                                <%= f.check_box :any, value: true %> &emsp;
                    </div>
                    <div class = 'form-group'>
                        <%= f.label :avatar %>
                        <%= f.file_field :avatar%>
                    </div>
                    <div class = 'form-group'>
                        <%= f.submit "Create Team!", class: "btn btn-primary" %>
                    </div>
                    
                <% end %>
            </div>
        </div>
    </div>
</div>