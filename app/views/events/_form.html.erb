<%= form_for @match, url: matches_path, :html => { :multipart => true } do |f| %>
    <%= hidden_field(:type, "submit") %>
    <%= f.hidden_field(:event_id, :value => @event.id) %>
    <%  
    select_fields = Array.new()
    @event.teams.each do |team|
        select_fields << [team.name, team.id]
    end
    %>
    <div class = 'form-group'>
        <%= f.label :round %>
        <%= f.number_field :round, class: 'form-control' %>
    </div>
    
    <div class = 'form-group'>
        <%= f.label :home_team %>
        <%= f.select :home_team, select_fields, {}, class: 'form-control' %>
    </div>
    
    <div class = 'form-group'>
        <%= f.label :away_team %>
        <%= f.select :away_team, select_fields, {}, class: 'form-control' %>
    </div>
    
    <div class = 'form-group'>
        <%= f.submit "Create Match", class: "btn btn-primary" %>
    </div>
    
<% end %>